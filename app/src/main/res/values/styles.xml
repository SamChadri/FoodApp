<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight">
        <!-- Customize your theme here. -->
        <!--<item name="colorPrimary">@color/colorLight</item> -->
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="android:colorBackground">@color/colorGrey</item>
        <item name="android:buttonStyle">@style/ButtonTheme</item>
        <item name="colorSurface">@color/colorLight</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>
    <style name="ButtonTheme" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/color_secondary</item>
        <item name="android:textColor">@color/colorLight</item>
    </style>

    <style name="ActionBarTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorLight</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBarAndStatusBar" parent="AppTheme.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.DayNight" >
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.DayNight" />

</resources>
